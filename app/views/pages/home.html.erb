<div class="container text-center">
    <div class="row">
        <div class="col-12">
            <%= image_tag "logo.png", width: "300px" %>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            
            <% if session[:order_id] %>
                  <script type="text/javascript">
                    window.location.href="/dishes?category=burritos"
                </script>
            <% else %>
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
                    Start order
                </button>
            <% end %>
        </div>
    </div>
    
    
</div>

<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= simple_form_for(Order.new) do |f| %>
                <%= f.input :customer_name, placeholder: "name", label: "Your name" %>
                <%= f.input :customer_email, placeholder: "email", label: "Your email" %>
                <%= f.input :pickup_time %>
                <%= f.submit "Choose Items", class: "btn btn-primary w-100" %>
        <% end %>
      </div>
    </div>
  </div>
</div>